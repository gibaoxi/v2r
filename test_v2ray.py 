#!/usr/bin/env python3
import subprocess
import sys

def test_v2ray_installation():
    """测试v2ray是否安装成功"""
    try:
        result = subprocess.run(['v2ray', '-version'], 
                              capture_output=True, text=True)
        if result.returncode == 0:
            print("✓ v2ray安装成功")
            print(result.stdout)
            return True
        else:
            print("✗ v2ray安装失败")
            return False
    except FileNotFoundError:
        print("✗ 未找到v2ray命令")
        return False

if __name__ == "__main__":
    if test_v2ray_installation():
        print("环境准备就绪")
        sys.exit(0)
    else:
        print("请先安装v2ray")
        sys.exit(1)
